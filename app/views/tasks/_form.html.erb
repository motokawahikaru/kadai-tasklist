<%= form_with(model: task, local: true) do |f| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% task.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
    
  <%= f.label :content, "タスク" %>
  <%= f.text_field :content %>
  
  <%= f.label :status, "ステータス" %>
  <%= f.select :status, ["完了", "作業中", "待機中", "このタスクは完了しました。"], include_blank: true  %>
  
  <%= f.submit "追加" %>
<% end %>