<h1>Tasklist</h1>
<% if logged_in? %>
  <p>ログイン完了ユーザ: <%= current_user.name %></p>
  
  <h2>タスク一覧</h2>

  <ul>
    <% @tasks.each do |task| %>
      <li><%= link_to task.id, task %> : <%= task.content %> &gt; <%= task.status %></li>
    <% end %>
  </ul>
  <%= paginate @tasks %>

  <%= link_to "新規タスクの追加", new_task_path %>
  <p><%= link_to "Log out", logout_path, method: :delete %></p>
<% else %>
  <%= link_to "Log in", login_path %>
  <%= link_to "Sign up", signup_path %>
<% end %>